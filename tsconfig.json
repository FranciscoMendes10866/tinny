{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
    },
    "include": [
        "src/**/*"
    ]
}
